# topology configuration
config:
  topology.parallelism: {{ getv "/kilda_storm_parallelism_level" }}
  topology.workers: {{ getv "/kilda_storm_parallelism_workers_count" }}
  topology.spouts.parallelism: 1

# spout definitions
spouts:
  - id: "zookeeper.spout"
    parallelism: 1

# bolt definitions
bolts:
  - id: "zookeeper.bolt"
    parallelism: 1
