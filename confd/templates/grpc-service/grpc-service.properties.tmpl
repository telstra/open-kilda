grpc.user={{ getv "/kilda_grpc_username" }}
grpc.pass={{ getv "/kilda_grpc_username" }}

environment.naming.prefix = {{ getv "/kilda_environment_naming_prefix" }}

service.name=@project.name@
service.version=@project.version@
service.description=@project.description@

kafka.hosts={{ getv "/kilda_kafka_hosts" }}
server.port={{ getv "/kilda_grpc_rest_port" }}

grpc.speaker.kafka.listener.threads=10
grpc.speaker.kafka.session.timeout=30000
grpc.speaker.kafka.messages.expiration.minutes=15

server.contextPath=/api/v1
security.rest.username.env=REST_USERNAME
security.rest.password.env=REST_PASSWORD
security.rest.username.default={{ getv "/kilda_grpc_username" }}
security.rest.password.default={{ getv "/kilda_grpc_username" }}
