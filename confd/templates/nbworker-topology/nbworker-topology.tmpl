# topology configuration
config:
  topology.parallelism: {{ getv "/kilda_storm_parallelism_level" }}
  topology.workers: {{ getv "/kilda_storm_parallelism_workers_count" }}

# spout definitions
spouts:
  - id: "coordinator.spout"
    parallelism: 1
  - id: "zookeeper.spout"
    parallelism: 1

# bolt definitions
bolts:
  - id: "coordinator.bolt"
    parallelism: 1
  - id: "zookeeper.bolt"
    parallelism: 1
  - id: "flows-operations-bolt"
    parallelism: 4