{
  "handlers": {
    "logstash": {
      "level": "DEBUG",
      "class": "logstash.TCPLogstashHandler",
      "host": "logstash.pendev",
      "version": 1,
      "message_type": "kilda-TE",
      "port": 5000
    },
    "stdout": {
      "formatter": "stdout",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    }
  },
  "version": 1,
  "root": {
    "handlers": [
      "stdout"
      ,"logstash"
    ],
    "propagate": true,
    "level": "INFO"
  },
  "loggers": {
    "topologylistener": {
      "level": "DEBUG"
    },
    "kafka": {
      "level": "NOTSET"
    },
    "neo4j.bolt": {
      "level": "NOTSET"
    },
    "neo4j.http": {
      "level": "NOTSET"
    }
  },
  "formatters": {
    "stdout": {
      "()": "topologylistener.log.ContextAwareFormatter",
      "format": "%(asctime)s %(levelname)s [%(threadName)s] %(name)s - [%(context)s] %(message)s"
    },
    "logstash_file": {
      "()": "logstash.formatter.LogstashFormatterVersion1",
      "message_type": "kilda-TPE",
      "tags": ["kilda-tpe"]
    }
  }
}
