<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="org.openkilda.testing.config, org.openkilda.functionaltests.config"/>
    <bean id="applicationContextProvider"
          class="org.openkilda.functionaltests.extension.spring.SpringContextNotifier"/>
    <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
        <property name="scopes">
            <map>
                <entry key="specThread">
                    <bean class="org.openkilda.functionaltests.SpecThreadScope"/>
                </entry>
            </map>
        </property>
    </bean>
</beans>
